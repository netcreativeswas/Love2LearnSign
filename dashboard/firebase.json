{
  "firestore": {
    "rules": "../app/firestore.rules",
    "indexes": "../app/firestore.indexes.json"
  },
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local"
      ]
    }
  ],
  "hosting": {
    "site": "love2learnsign-1914ce",
    "public": "public",
    "ignore": ["firebase.json", "**/node_modules/**"],
    "headers": [
      {
        "source": "/",
        "headers": [{ "key": "Cache-Control", "value": "no-cache, no-store, must-revalidate" }]
      },
      {
        "source": "/admin/",
        "headers": [{ "key": "Cache-Control", "value": "no-cache, no-store, must-revalidate" }]
      },
      {
        "source": "/assets/**",
        "headers": [{ "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }]
      },
      {
        "source": "/word/assets/**",
        "headers": [{ "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }]
      },
      {
        "source": "/index.html",
        "headers": [{ "key": "Cache-Control", "value": "no-cache, no-store, must-revalidate" }]
      },
      {
        "source": "/admin/index.html",
        "headers": [{ "key": "Cache-Control", "value": "no-cache, no-store, must-revalidate" }]
      },
      {
        "source": "/admin/main.dart.js",
        "headers": [{ "key": "Cache-Control", "value": "no-cache, no-store, must-revalidate" }]
      },
      {
        "source": "/admin/flutter_bootstrap.js",
        "headers": [{ "key": "Cache-Control", "value": "no-cache, no-store, must-revalidate" }]
      },
      {
        "source": "/admin/flutter.js",
        "headers": [{ "key": "Cache-Control", "value": "no-cache, no-store, must-revalidate" }]
      },
      {
        "source": "/admin/version.json",
        "headers": [{ "key": "Cache-Control", "value": "no-cache, no-store, must-revalidate" }]
      },
      {
        "source": "/admin/AssetManifest.json",
        "headers": [{ "key": "Cache-Control", "value": "no-cache, no-store, must-revalidate" }]
      },
      {
        "source": "/admin/FontManifest.json",
        "headers": [{ "key": "Cache-Control", "value": "no-cache, no-store, must-revalidate" }]
      },
      {
        "source": "/flutter_service_worker.js",
        "headers": [{ "key": "Cache-Control", "value": "no-cache, no-store, must-revalidate" }]
      },
      {
        "source": "/admin/flutter_service_worker.js",
        "headers": [{ "key": "Cache-Control", "value": "no-cache, no-store, must-revalidate" }]
      },
      {
        "source": "/word/**",
        "headers": [
          { "key": "Referrer-Policy", "value": "strict-origin-when-cross-origin" },
          { "key": "X-Content-Type-Options", "value": "nosniff" },
          {
            "key": "Content-Security-Policy",
            "value": "default-src 'self'; img-src 'self' https: data:; media-src https:; script-src 'self' 'unsafe-inline' https://www.gstatic.com; connect-src https://firestore.googleapis.com https://www.googleapis.com; style-src 'self' 'unsafe-inline'"
          }
        ]
      }
    ],
    "redirects": [
      {
        "source": "/download",
        "destination": "https://play.google.com/store/apps/details?id=com.lovetolearnsign.app",
        "type": 302
      },
      {
        "source": "/download/**",
        "destination": "https://play.google.com/store/apps/details?id=com.lovetolearnsign.app",
        "type": 302
      },
      { "source": "/login", "destination": "/admin/", "type": 302 }
    ],
    "rewrites": [
      { "source": "/word/**", "destination": "/word/index.html" },
      { "source": "/admin", "destination": "/admin/index.html" },
      { "source": "/admin/", "destination": "/admin/index.html" },
      { "source": "/admin/**", "destination": "/admin/index.html" },
      { "source": "**", "destination": "/index.html" }
    ]
  },
  "flutter": {
    "platforms": {
      "android": {
        "default": {
          "projectId": "love2learnsign-1914ce",
